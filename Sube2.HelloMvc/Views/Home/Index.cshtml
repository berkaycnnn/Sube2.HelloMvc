<style>
    .custom-jumbotron {
        background-color: #f8f9fa;
        padding: 5rem 2rem;
        border-radius: 0.3rem;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin: 2rem auto;
        max-width: 90%;
        min-height: 80vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    .custom-heading {
        font-family: 'Arial Black', sans-serif;
        color: #343a40;
        font-size: 4rem;
        margin-bottom: 2rem;
    }
